@model IEnumerable<Basic_CRUD_App_James_Bond_Gadgets_.Models.GadgetModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <h1>Gadget List</h1>

        <div>
            <button asp-action="Create" type="button" class="btn btn-info btn-lg btn-block">Creat New</button>
        </div>
      
        <table class="table table-responsive-sm table-hover table-bordered">
            <thead >
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.AppearsIn)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.WithThisActor)
                    </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td scope="row">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppearsIn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WithThisActor)
                        </td>
                        <td>
                            <button type="button" class="btn btn-success"> @Html.ActionLink("Edit", "Edit", new { id = item.Id },new {@class= "my-class" })</button>  <br />
                            <button type="button" class="btn btn-warning"> @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "my-class" })</button>  <br />
                            <button type="button" class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "my-class" })</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>